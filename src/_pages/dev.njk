{# OTHER PROJECTS SECTION ========================================= #}
{% set current = content.dev.otherprojects %}
<section class="section" id="{{ current.id | lower | trim }}">
    <div class="container">
        <div class="flow container--md center ta-center--lg">
            <div class="constrain--lg">
                <h2>{{ current.heading }}</h2>
                <div class="flow">
                    {% markdown %}{{ current.copy | safe }}{% endmarkdown %}
                </div>
            </div>
        </div>
        <div class="container--md mt cards" data-variant="horizontal">
            <ul class="cards__list" role="list">
                {% for item in current.items %}
                    <li class="cards__card">
                        <div class="cards__image">
                            {% image item.image,
                            "",
                            sizes = "(max-width: 27.5em) 100vw, 5rem",
                            widths = [315, 450, 625, 900] %}
                        </div>
                        <div class="cards__heading">
                            <h3 class="cards__title">{{ item.title }}</h3>
                        </div>
                        <p class="cards__body">{{ item.description }}</p>
                        <div class="cards__stack">
                            <ul role="list" class="stack__list">
                                {% for item in item.stack %}
                                    <li>
                                        <span class="icon flat {{ item }}"></span>
                                        <span>{{ item }}</span>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="cards__links">
                            {% if item.external %}
                                <div class="cards__link">
                                    <a href="{{ item.external }}" title="External Link">
                                        <span class="sr-only">External Link</span>
                                        <span class="icon flat external"></span></a>
                                </div>
                            {% endif %}
                            <div cards__link>
                                <a href="{{ item.github }}" title="GitHub Repo">
                                    <span class="icon flat github"></span>
                                    <span class="sr-only">Github Link</span></a>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    {% include "partials/back-to-top.njk" %}
</section>

{# MY TOOLS SECTION =============================================== #}

                    <h3>{{ section.heading }}</h3>
                    <ul class="tools__list">
                        {% for item in section.tools %}
                            <li class="tools__item">
                                <div class="tools__image">
                                    <span class="icon color {{ item.class }}"></span>
                                </div>
                                <span class="tools__title">{{ item.title }}</span>
                                {% if item.description %}
                                    <span class="tools__description">{{ item.description }}</span>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endfor %}
        </div>
    </div>
    {% include "partials/back-to-top.njk" %}

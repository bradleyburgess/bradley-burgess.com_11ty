{# PORTFOLIO SECTION ============================================== #}
{% set current = content.dev.portfolio %}
<section class="section" id="{{ current.id | lower | trim }}">
    <div class="container">
        <div class="flow container--md">
            <h2>{{ current.heading }}</h2>
            <div class="mt">
                <div class="cards" data-variant="large">
                    <ul class="cards__list" data-variant="flex-start" role="list">
                        {% for item in current.items %}
                            <li class="cards__card" data-card data-url="/portfolio/{{ item.title | slugify }}/">
                                <div class="cards__text flow">
                                    <div class="cards__heading">
                                        <h3 class="cards__title">
                                            <a href="/portfolio/{{ item.title | slugify }}/">{{ item.title }}</a>
                                        </h3>
                                        <p class="cards__subtitle">{{ item.url | noProto }}</p>
                                        {% if item.firetower %}
                                        <div class="firetower-min mt">
                                            <firetower-scores raw-scores="{{ item.firetower }}" rounded></firetower-scores>
                                        </div>
                                        {% endif %}
                                    </div>
                                    <div class="cards__body flex-justify-between">
                                        <p class="cards__body">{{ item.description }}.</p>
                                        <span class="clr-neutral-800" aria-hidden>read more</span>
                                    </div>
                                </div>
                                <div class="cards__image">
                                    {% image item.image,
                                    "",
                                    sizes = "19.75rem",
                                    widths = [316, 632] %}
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    {% include "partials/back-to-top.njk" %}
</section>

